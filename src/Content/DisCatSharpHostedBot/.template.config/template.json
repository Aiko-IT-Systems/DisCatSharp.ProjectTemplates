{
  "$schema": "http://json.schemastore.org/template",
  "author": "Jon Braunsma Jr",
  
  "classifications": [ "Console" ],
  
  "name": "DisCatSharp Web Hosted Bot Template",
  "identity": "DisCatSharp.WebHost.Bot.Template",
  "shortName": "DCSWebHostBot",
  
  "tags": {
    "language": "C#",
    "type": "project"
  },

  "sourceName": "DisCatSharpHostedBot",
  "defaultName": "DisCatSharpHostedBot",

  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!UseNet6)",
          "exclude": [
            "Global.cs"
          ]
        }
      ]
    }
  ],

  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net5.0",
          "description": "Target net5.0"
        },
        {
          "choice": "net6.0",
          "description": "Target net6.0"
        }
      ],
      "replaces": "net6.0",
      "defaultValue": "net6.0"
    },

    "UseNet6": {
      "type": "computed",
      "value": "(Framework == \"net6.0\")"
    },

    "UseApplicationCommands": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Does your bot use the DisCatSharp.ApplicationCommands module?"
    },

    "UseCommands": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Does your bot use the DisCatSharp.Commands module?"
    },

    "UseCommon": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Does your bot use the DisCatSharp.Common module?"
    },

    "UseInteractivity": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Does your bot use the DisCatSharp.Interactivity module?"
    },

    "UseLavalink": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Does your bot use the DisCatSharp.Lavalink module?"
    },

    "UseVoice": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Does your bot use the DisCatSharp.VoiceNext module?"
    },

    "UseVoiceNatives": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Does your bot use the DisCatSharp.VoiceNext.Natives module?"
    }
  }
}